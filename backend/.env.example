# Backend Environment Variables for zkVerify
# Polygon Amoy Testnet Configuration

# Blockchain Configuration
RPC_URL=https://polygon-amoy.infura.io/v3/YOUR_INFURA_KEY
CHAIN_ID=80002

# Private Keys (without 0x prefix - Hardhat will add it)
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here
PROOF_SIGNER_PRIVATE_KEY=your_proof_signer_private_key_here
ADMIN_PRIVATE_KEY=your_admin_private_key_here
TRUSTED_PROVER_PRIVATE_KEY=your_trusted_prover_private_key_here
TRUSTED_PROVER_ADDRESS=0xYourTrustedProverAddress

# Deployed Contract Addresses (Polygon Amoy)
AUDITOR_REGISTRY_ADDRESS=0xYourAuditorRegistryAddress
PROOF_VERIFIER_ADDRESS=0xYourProofVerifierAddress
ZK_VERIFIER_ADDRESS=0xYourZKVerifierAddress

# MongoDB Atlas Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/zkVerify?retryWrites=true&w=majority

# Admin Authentication
ADMIN_JWT_SECRET=your_jwt_secret_here

# AIR Kit Configuration (optional)
PARTNER_ID=your_partner_id
ISSUER_DID=your_issuer_did
VERIFIER_DID=your_verifier_did
API_BASE=https://api.sandbox.air3.com

# Server Configuration
PORT=10000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_WEBSITE_URL=http://localhost:3000

# Optional: Polygonscan API Key (for contract verification)
POLYGONSCAN_API_KEY=

