# Frontend Environment Variables for Polverify
# Next.js will automatically load this file

# Backend API URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:10000

# Blockchain Configuration (Polygon Amoy)
NEXT_PUBLIC_RPC_URL=https://polygon-amoy.infura.io/v3/YOUR_INFURA_KEY
NEXT_PUBLIC_CHAIN_ID=80002
NEXT_PUBLIC_EXPLORER_URL=https://testnet-scan.polygon.technology

# Deployed Contract Addresses (Polygon Amoy)
NEXT_PUBLIC_AUDITOR_REGISTRY_ADDRESS=0xYourAuditorRegistryAddress
NEXT_PUBLIC_PROOF_VERIFIER_ADDRESS=0xYourProofVerifierAddress
NEXT_PUBLIC_ZK_VERIFIER_ADDRESS=0xYourZKVerifierAddress

# Legacy contract address (for backward compatibility)
NEXT_PUBLIC_CONTRACT_ADDRESS=0xYourProofVerifierAddress

